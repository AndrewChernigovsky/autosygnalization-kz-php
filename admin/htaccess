# Включаем mod_rewrite для SPA роутинга
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /admin/
  
  # Если запрашивается реальный файл - отдаем его
  RewriteCond %{REQUEST_FILENAME} !-f
  
  # Если запрашивается реальная директория - отдаем ее
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Все остальные запросы перенаправляем на index.php
  # Он проверит авторизацию и отдаст Vue приложение
  RewriteRule ^ index.php [L]
</IfModule>

# Разрешаем доступ к статическим файлам из dist/
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$">
  Require all granted
</FilesMatch>

